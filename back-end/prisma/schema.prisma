generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model minigame{
  id Int @id @default(autoincrement())
  nome String
  id_assets Int
  assets assets @relation(fields: [id_assets], references [id])
}

model assets{
  id Int @id @default(autoincrement())
  dados String
  jogo minigame[]
}




